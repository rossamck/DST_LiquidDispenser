{
  "name": "dst-liquid-dispenser",
  "version": "0.2.7",
  "private": true,
  "author": "github.com/rossamck",
  "description": "User interface for Liquid Dispenser",
  "main": "src/electron.js",
  "homepage": "./",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "clsx": "^1.2.1",
    "copyfiles": "^2.4.1",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-responsive-modal": "^6.4.1",
    "react-spring": "^9.7.1",
    "react-tabs": "^6.0.0",
    "react-transition-group": "^4.4.5",
    "socket.io-client": "^4.6.1",
    "tinycolor2": "^1.6.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run postbuild",
    "postbuild": "copyfiles -u 1 src/electron.js build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "electron .",
    "package": "electron-packager . --asar",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "asar": "^3.2.0",
    "autoprefixer": "^10.4.14",
    "copyfiles": "^2.4.1", 
    "electron": "^24.3.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "postcss": "^8.4.21",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.3.1"
  },
  "build": {
    "appId": "com.example.liquiddispenser",
    "productName": "LiquidDispenser",
    "publish": [
      {
        "provider": "github",
        "owner": "rossamck",
        "repo": "DST_LiquidDispenser",
        "releaseType": "release"
      }
    ],
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
